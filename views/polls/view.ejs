    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
}

.poll-meta {
    margin: 1rem 0;
    color: #666;
    font-size: 0.875rem;
}

.poll-meta span {
    margin-right: 1rem;
}

.alert {
    padding: 1rem;
    margin: 1rem 0;
    border-radius: 4px;
    border: 1px solid;
}

.alert-info {
    background-color: #d1ecf1;
    border-color: #bee5eb;
    color: #0c5460;
}

.alert-success {
    background-color: #d4edda;
    border-color: #c3e6cb;
    color: #155724;
}

.alert-warning {
    background-color: #fff3cd;
    border-color: #ffeaa7;
    color: #856404;
}

.poll-options {
    margin: 2rem 0;
}

.option {
    margin: 1rem 0;
    padding: 1rem;
    border: 1px solid #ddd;
    border-radius: 4px;
    background-color: #f8f9fa;
}

.option label {
    display: flex;
    align-items: center;
    cursor: pointer;
    font-weight: 500;
}

.option input[type="radio"] {
    margin-right: 0.5rem;
}

.current-vote {
    color: #007bff;
    font-weight: bold;
    margin-left: 0.5rem;
}

.option-result {
    margin: 1rem 0;
    padding: 1rem;
    border: 1px solid #ddd;
    border-radius: 4px;
    background-color: white;
}

.option-result.user-voted {
    border-color: #007bff;
    background-color: #f0f8ff;
}

.option-text {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.5rem;
    font-weight: 500;
}

.your-vote {
    color: #007bff;
    font-weight: bold;
}

.option-bar {
    height: 20px;
    background-color: #e9ecef;
    border-radius: 10px;
    overflow: hidden;
    margin: 0.5rem 0;
}

.option-fill {
    height: 100%;
    background-color: #007bff;
    transition: width 0.3s ease;
}

.option-count {
    font-size: 0.875rem;
    color: #666;
}

.poll-threshold-info {
    margin: 2rem 0;
    padding: 1.5rem;
    background-color: #f8f9fa;
    border-radius: 8px;
    border: 1px solid #dee2e6;
}

.threshold-display {
    margin-bottom: 1rem;
}

.threshold-progress {
    margin: 1rem 0;
}

.threshold-bar {
    height: 24px;
    background-color: #e9ecef;
    border-radius: 12px;
    overflow: hidden;
    margin-bottom: 0.5rem;
}

.threshold-fill {
    height: 100%;
    background: linear-gradient(90deg, #28a745, #20c997);
    transition: width 0.3s ease;
    border-radius: 12px;
}

.threshold-text {
    font-size: 0.875rem;
    color: #666;
    font-weight: 500;
}

.approval-status {
    text-align: center;
    padding: 1rem;
    border-radius: 8px;
    margin-top: 1rem;
}

.approval-status.approved {
    background-color: #d4edda;
    border: 2px solid #28a745;
    color: #155724;
}

.approval-status.pending {
    background-color: #fff3cd;
    border: 2px solid #ffc107;
    color: #856404;
}

.approval-badge {
    font-size: 1.1rem;
    font-weight: bold;
    display: block;
    margin-bottom: 0.5rem;
}

.approval-status small {
    display: block;
    font-size: 0.875rem;
    opacity: 0.8;
}

.admin-actions {
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid #dee2e6;
}

@media (max-width: 768px) {
    .poll-view {
        padding: 1rem;
    }
    
    .poll-meta span {
        display: block;
        margin-bottom: 0.25rem;
    }
    
    .option-text {
        flex-direction: column;
        align-items: flex-start;
    }
    
    .your-vote {
        margin-top: 0.25rem;
    }
}

.change-vote-section {
    margin-top: 2rem;
    padding-top: 1rem;
    border-top: 1px solid #dee2e6;
}

.change-vote-section h4 {
    margin-bottom: 1rem;
    color: #333;
}
</style>

<script>
function showChangeVoteForm() {
    document.getElementById('changeVoteForm').style.display = 'block';
    event.target.style.display = 'none';
}

function hideChangeVoteForm() {
    document.getElementById('changeVoteForm').style.display = 'none';
    document.querySelector('.change-vote-section button').style.display = 'block';
}
</script>