# VotingApp Environment Configuration
# Copy this file to .env and update with your values

# Server Configuration
PORT=3000

# Security Configuration
# Generate a secure secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
SESSION_SECRET=your-session-secret-here

# Environment (development/production)
# Set to 'production' for deployed environments
NODE_ENV=development

# Default Admin Account
# Change these values for production!
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@community.com

# Database Configuration
# For production (Railway will provide this automatically)
# DATABASE_URL=postgresql://postgres:password@localhost:5432/votingapp
# Leave empty for local SQLite development

# Email Configuration (for future email notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Community Configuration (for future use)
# COMMUNITY_NAME=Online Democratic Community
# INITIAL_FUND_AMOUNT=0
# DEFAULT_VOTE_THRESHOLD=10