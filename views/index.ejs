.carousel-slide {
    flex: 0 0 100%;
    width: 100%;
    opacity: 0;
    transition: opacity 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    transform: scale(0.95);
}

.carousel-slide.active {
    opacity: 1;
    transform: scale(1);
}

/* Preload adjacent slides for smoother transitions */
.carousel-slide.adjacent {
    opacity: 0;
    transform: scale(0.98);
}

